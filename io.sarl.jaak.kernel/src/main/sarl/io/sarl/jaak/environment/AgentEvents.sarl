package io.sarl.jaak.environment

import io.sarl.jaak.environment.body.TurtleObject
import io.sarl.jaak.kernel.AbstractStampedEvent

/** The perception for an agent.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event Perception extends AbstractStampedEvent {
	val body : TurtleObject
	new(ct : float, lsd : float, body : TurtleObject) {
		super(ct, lsd)
		this.body = body
	}
}

/** The body for an agent is ready.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event BodyCreated extends AbstractStampedEvent {
	val body : TurtleObject
	val worldWidth : int
	val worldHeight : int
	new(ct : float, lsd : float, body : TurtleObject, worldWidth : int, worldHeight : int) {
		super(ct, lsd)
		this.body = body
		this.worldWidth = worldWidth
		this.worldHeight = worldHeight
	}
}
